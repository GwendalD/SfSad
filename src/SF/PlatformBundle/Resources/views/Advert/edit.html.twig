{# src/SF/PlatformBundle/Resources/views/Advert/edit.html.twig #}

{% extends "SFPlatformBundle::layout.html.twig" %}

{% block title %}
  Modifier une annonce - {{ parent() }}
{% endblock %}

{% block sfplatform_body %}

  <h2>Modifier une annonce</h2>

  {% if is_granted('ROLE_USER') %}

    {% if is_granted('ROLE_USER') or app.user.id == advert.user.id %}

      {{ include("SFPlatformBundle:Advert:form.html.twig") }}



    <p>
      Vous éditez une annonce déjà existante, merci de ne pas changer
      l'esprit général de l'annonce déjà publiée.
    </p>

    {% else %}
      Si vous souhaitez modifier cette annonces vous devez être connécté et en être propriétaire.
    {% endif %}

  {% endif %}

  <p>
    <a href="{{ path('sf_platform_view', {'advert_id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
  </p>

{% endblock %}